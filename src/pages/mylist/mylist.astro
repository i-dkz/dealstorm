---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="My List | DealStorm">
    <div
        class="flex flex-col w-full min-h-screen justify-center items-center bg-background overflow-y-auto"
    >
        <h2 class="text-2xl font-bold">
            My weekly budget:<span class="text-teal-600">$75</span>
        </h2>
        <div class="w-[80%] bg-gray-400 py-1 my-2 rounded-full"></div>
        <div class="font-bold text-gray-500">
            0/<span class="text-teal-600">$75</span>
        </div>
        <input
            type="text"
            placeholder="Search for an ingredient"
            class="py-2 my-5 px-2 rounded-xl outline-none"
        />
        <h1 class="text-3xl font-bold tracking-tighter">My List</h1>
        <div
            class="my-2 py-2 px-20 bg-green-400 w-[300px] rounded-3xl text-white font-bold text-center"
        >
            Chicken breast
        </div>
        <div
            class="my-2 py-2 px-20 bg-green-400 w-[300px] rounded-3xl text-white font-bold text-center"
        >
            White rice
        </div>
        <div
            class="my-2 py-2 px-20 bg-green-400 w-[300px] rounded-3xl text-white font-bold text-center"
        >
            Broccoli
        </div>
        <div
            class="my-2 py-2 px-20 bg-green-600 w-[300px] rounded-3xl text-white font-bold text-center"
        >
            Spaghetti
        </div>
        <div
            class="my-2 py-2 px-20 bg-yellow-400 w-[300px] rounded-3xl text-white font-bold text-center"
        >
            Cheese
        </div>
        <div
            class="my-2 py-2 px-20 bg-slate-700 rounded-3xl text-4xl text-white"
        >
            Submit
        </div>
    </div>
</Layout>
