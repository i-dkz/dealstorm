---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="search">
  <div
    class="flex justify-center items-center bg-background gap-4 min-h-screen"
  >
    <div
      class="flex flex-col h-auto justify-center items-center bg-background gap-4"
    >
      <div
        class="flex flex-col p-4 rounded-md bg-white gap-2 w-96 overflow-hidden"
      >
        <input
          class="form-control w-full bg-gray-50"
          name="search"
          placeholder="Begin Typing To Search Ingredients..."
          hx-post="/api/fetch/query"
          hx-trigger="input changed delay:500ms, search"
          hx-target="#search-results"
          hx-indicator=".htmx-indicator"
        />
      </div>
      <div
        id="search-results"
        class="w-96 bg-white h-80 max-h-96 rounded-md p2 overflow-y-auto"
      >
      </div>
    </div>
    <div
      id="tags"
      class="flex flex-col h-[24.5rem] w-48 bg-white rounded-md p-2 gap-2"
    >
    </div>
  </div>
</Layout>
