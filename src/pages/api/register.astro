---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Login">
  <main class="flex flex-col justify-center items-center h-screen bg-background">
    <div class="flex flex-col w-full items-center gap-4">
      <h1>Vendor Register</h1>
      <div class="flex flex-col w-full items-center gap-2">
        <form
          action="/api/auth/register"
          method="post"
          class="flex justify-evenly w-72 h-auto p-4 border rounded-md flex-col relative shadow-lg gap-2 bg-white"
        >

          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class=" w-full py-2 px-4 pr-8 rounded-md border bg-gray-50"
            required
          />
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="w-full py-2 px-4 pr-8 rounded-md border bg-gray-50"
            required
          />
          <button type="submit" class="btn">Register</button>
        </form>
        <span class="text-xs w-full text-center"
          >Already have an account? <a href="/api/login"> <u>Log in</u></a>
          </span
        >
      </div>
    </div>
  </main>
</Layout>
